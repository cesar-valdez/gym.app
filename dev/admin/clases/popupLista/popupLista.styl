.PopupClasesLista
	background: rgba(black, 0.60);
	position:absolute;
	top:0;
	bottom:0;
	right:0;
	left:0;
	display:flex;
	justify-content:center;
	align-items:center;
	&-contenidoClasesLista
		min-width:60em;
		max-width:72em;
		border-radius:17px;
		background:white;
		padding:2em 4em 3em;
		position:relative;
		.FormPDF
			display:inline-block;
			&-btnPDF 
				color:white;
				font-size:15px;
				padding:.3em .5em;
				border: 0;
				border-radius:7px;
				background:rgb(179, 116, 0);
				//margin-left:10em;
		h2 
			display:inline-block;
			font-size:20px;
			color:black;
			//font-family:Roboto Condensed;
			font-weight:lighter;
			border-bottom: 3px solid rgb(232,167,47);
			margin-left:10em;
		div
			cursor:pointer;
			position:absolute;
			color:black;
			font-size:20px;
			top:0;
			right:0;
			margin: 1em 1em 0em 0em;
		p 
			text-align:center;
		table 
			text-align:center;
			tr
				td
					border: 1px solid rgb(193,193,193);
					padding:.2em .6em;
					i
						cursor:pointer;
	