div(popup-close).PopupInstructoresAgregar
	form.PopupInstructoresAgregar-contenidoInstructoresAgregar
		figure.ImgAgregar
			span Subir foto
			div: i.icomoon.camera
		p Nombre:
		input(type="text" name="nombre" ng-model="instructor.nombre" required)
		p Apellido:
		input(type="text" name="apellido" ng-model="instructor.apellido" required)
		p.class Clase:
		input(type="text" name="clase" ng-model="instructor.clase" required)
		p Correo:
		input(type="text" name="correo" ng-model="instructor.correo" required)
		p Celular:
		input(type="text" name="celular" ng-model="instructor.celular" required)
		p.peso Peso:
		input.InputPeso(type="text" name="peso" ng-model="instructor.peso" required)
		p Estatura:
		input.InputPeso(type="text" name="estatura" ng-model="instructor.estatura" required)
		p Edad:
		input.InputEdad(type="text" name="edad" ng-model="instructor.edad" required)
		button.BtnCancelar.popup-close Cancelar
		button(ng-click="addInstructor()").BtnCrear Crear