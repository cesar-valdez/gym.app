.PopupRetosAgregar
	background: rgba(black, 0.60);
	position:absolute;
	top:0;
	bottom:0;
	right:0;
	left:0;
	display:flex;
	justify-content:center;
	align-items:center;
	&-contenidoRetosAgregar
		width:25.5em;
		border-radius:17px;
		background:white;
		padding:2em 2em 3em;
		.ImgAgregar
			margin:0 auto;	
			width:21.5em;
			//height:8em;
			background: rgb(51,51,51);
			padding:1.5em 0em;
			span
				color:white;
				text-align:center;
				margin:0em 0em 0em 9em;
			div
				width:3.2em;
				height:3em;
				cursor:pointer;
				color:white;
				background:white;
				margin:.5em auto;
				i
					color:black;
					font-size:27px;
					margin:.4em .4em 0em .4em;
					display:inline-block;
		p 
			color:black;
			display: inline-block;
		.CajaReto
			width:19em;
			height:1.5em;
		.Descripcion
			display:block;
			margin-bottom:0em;
		.TextArea
			width:21em;
			height:7em;
			background:white;
			border: 1px solid gray;
			border-radius:10px;
			margin:1em 0em 0em 0em;
			resize:none;
		.BtnCancelar
			background:rgb(170,170,160);
			display:inline-block;
			margin:2em 2em 0em 3.5em;
			padding:.4em 1em;
		.BtnCrear
			background: rgb(231,150,28);
			display:inline-block;
			padding:.4em 2em;
		button
			color:black;
			font-size:15px;
			border-radius:7px;
			border: 1px solid rgb(110,110,100);