div.Costos 
	span Inscripcion....................................................................$100<br>
	span Por mes........................................................................$300
button(class="AgregarPago PopupAdd" popup-add="<pagos-agregar><pagos-agregar/>") Agregar pago
div.AreaTablaAdmin
	div.AreaTablaAdmin-encabezadoAdmin
		spana(ui-sref="admin.pagos").Pagos Pagos mensuales
		span.Vencidos Mensualidad vencida
	div.AreaTablaAdmin-scrollAdmin
		table.AreaTablaAdmin-scrollAdmin-tablaAdmin
			tr
				td No.registro
				td Nombre 
				td Apellido
				td Fecha de pago
				td Fecha pagado
				td Costo
				td Estado de pago
				td
			tr(ng-repeat="pago in pagos" ng-class="{'fechaVencida': pago.fechaVencida}")
				td {{pago.ClientesRegistro}}
				td {{pago.ClientesNombre}}
				td {{pago.ClientesApellido}}
				td {{pago.PagosFechaPago | date:'dd/MMM/yyyy'}}
				td {{pago.PagosFechaPagado | date:'dd/MMM/yyyy'}}
				td {{pago.PagosMonto}}
				td {{pago.PagosEstado}}
				td
					div(class="icomoon.pencil PopupAdd" popup-add="<pagos-modificar><pagos-modificar/>")
						i.icomoon.pencil
					div(class="icomoon.bin PopupAdd" popup-add="<pagos-eliminar><pagos-eliminar/>")
						i.icomoon.bin
			