.PopupPagosAgregar
	background: rgba(black, 0.60);
	position:absolute;
	top:0;
	bottom:0;
	right:0;
	left:0;
	display:flex;
	justify-content:center;
	align-items:center;
	&-contenidoPagosAgregar
		width:23em;
		border-radius:17px;
		padding:2em 3em 3em;
		background:white;
		.AreaBuscar
			border-left: 1px dashed gray;
			border-bottom: 1px dashed gray;
			padding:0em 0em .5em 1em;
			.Buscar
				display:block;
				margin:0;
			.PorNombre
				margin:.1em 0em .4em 1.7em;
		.PFecha
			margin-left:.7em;
		.CajaAncho
			width:12em;
		.PEstado
			margin-left:.5em;
		.Pago
			margin-left:1.2em;
		.CajaPago
			width:5em;
		input 
			display:inline-block;
			color:gray;
		.InputRegistro
			width:8em;
		p
			display:inline-block;
		.BtnCancelar
			background:rgb(170,170,160);
			display:inline-block;
			margin:2em 2em 0em 1em;
			padding:.3em 1em;
		.BtnCrear
			background: rgb(231,150,28);
			display:inline-block;
			padding:.3em 1.5em;
		button
			color:black;
			font-size:15px;
			border-radius:7px;
			border: 1px solid rgb(110,110,100);