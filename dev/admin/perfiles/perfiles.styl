.AreaTablaClientes
	width:55em;
	margin: 1em 0em 0em 8em;
	&-encabezadoClientes
		width:100%;
		background:rgb(178,178,178);
		padding:.8em 0em
		border-right: 1px solid rgb(140,139,139);
		font-size:17px;
		border-top-left-radius:25px;
		border-top-right-radius:25px;
		.Pagos
			border-bottom:1px solid black;
			margin:0em 7em 0em 8em;
			cursor:pointer;
	&-scrollClientes
		width:100%;
		height:20.6em;
		overflow:auto;
		&-tablaClientes
			width:100%;
			tr
				&.fechaVencida
					td
						background:red;
						border: 1px solid red;
				td
					border: 1px solid rgb(193,193,193);
					background:white;
					text-align:center;
					padding:.4em 0em;
				&:first-child
					font-weight:bold;
				figure
					background:red;
				div
					display:inline-block;
					padding:0em 0em 0em 1.5em;
					cursor:pointer;
					i
						color:gray;
						font-size:16px;