@import './popupVer/popupVer.styl'
//--------------------globales-------------------------	
.ContenedorReto
	display: flex;
	flex-wrap: wrap;
	justify-content: space-around;
	padding: 5em 3em 0em 3em;
.Reto
	width:18em;
	background:white;
	border-radius:15px;
	padding:.7em .7em .7em .7em;
	margin: 0em 2em 3em 0em;
	&-imagenReto
		width:16.5em;
		height:7.5em;
		background-repeat:no-repeat;
		background-size:cover;
		background-position:center center;
	&-reto
		font-size:21px;
		text-align:center;
		margin-top:.3em;
	&-fecha
		font-size:13px;
		text-align:center;
		margin-top:.2em;
	&-verBtn
		background: rgb(127,129,112);
		margin-left:6em;
	&-participar
			background: rgb(53,131,44);
	&-rechazar
		background: rgb(229,52,13);
		float:right;
	button
		color:white;
		font-size:15px;
		padding:.2em .9em;
		margin-top:.5em;
		border: 0;
		border-radius:7px;