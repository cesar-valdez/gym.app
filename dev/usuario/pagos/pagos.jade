div.Costos 
	span Inscripcion....................................................................$100<br>
	span Por mes........................................................................$300
div.AreaTabla
	div.AreaTabla-encabezado
		span.Pagos Pagos mensuales
		//span.Vencidos Mensualidad vencida
	div.AreaTabla-scroll
		table.AreaTabla-scroll-tabla
			tr
				td No.registro
				td Nombre 
				td Apellido
				td Fecha de pago
				td Fecha pagado
				td Costo
				td Estado de pago
			tr(ng-repeat="p in pagos" ng-class="{'fechaVencida': p.fechaVencida}")
				td {{p.ClientesRegistro}}
				td {{p.ClientesNombre}}
				td {{p.ClientesApellido}}
				td {{p.PagosFechaPago | date:'dd/MMM/yyyy'}}
				td {{p.PagosFechaPagado | date:'dd/MMM/yyyy'}}
				td {{p.PagosMonto}}
				td {{p.PagosEstado}}