@import './popupInformacion/popupInformacion.styl'

//--------------------globales-------------------------	
.ContenedorAreaInstructor
	display: flex;
	flex-wrap: wrap;
	justify-content: space-around;
	padding: 4.5em 3em 0em 3em;
.Instructor
	width:17em;
	background:white;
	border-radius:15px;
	padding:.7em .7em .7em .7em;
	margin: 0em 2em 3em 0em;
	&-imagenInstructor
		width:15.5em;
		height:7.5em;
		background-repeat:no-repeat;
		background-size:100% 100%;
		background-position:center center;
	figcaption
		font-size:1.3em;
		text-align:center;
		margin-top:.3em;
	&-informacion
		background: rgb(231,150,28);
		margin:.5em 0em 0em 3.5em;
		display:inline-block;
	button
		color:white;
		font-size:15px;
		padding:.3em .9em;
		border: 0;
		border-radius:7px;